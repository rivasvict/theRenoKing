<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:background="@drawable/top_bar"
        android:gravity="center_vertical"
        android:padding="5sp" >

        <ImageView
            android:id="@+id/statistics"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/ic_left_normal"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/statistics_icon" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/ic_right_normal"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:src="@drawable/settings_icon" />

        <TextView
            android:id="@+id/lblProspects"
            style="@style/title_text"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/prospects_list" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/ic_left_normal"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/search_icon" />

        <ImageView
            android:id="@+id/add_prospect"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:background="@drawable/ic_right_normal"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:src="@drawable/add_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/stage1"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:text="@string/stage1" />

        <TextView
            android:id="@+id/stage2"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:text="@string/stage2" />

        <TextView
            android:id="@+id/stage3"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:text="@string/stage3" />

        <TextView
            android:id="@+id/stage4"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:text="@string/stage4" />

        <TextView
            android:id="@+id/stage5"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_marginRight="1sp"
            android:layout_weight="1"
            android:text="@string/stage5" />
        
        <TextView
            android:id="@+id/stage6"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/stage6" />

        <TextView
            android:id="@+id/followup"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/stage_followup" />

        <TextView
            android:id="@+id/dead"
            style="@style/stage_style"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dead" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtSearch"
        style="@style/add_prospect_textbox"
        android:layout_width="fill_parent"
        android:layout_height="40sp"
        android:hint="@string/search_hint"
        android:inputType="textPersonName"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lvProspects"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:cacheColorHint="@color/transparent" >
    </ListView>

    <TextView
        android:id="@+id/lblNoProspects"
        style="@style/title_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/no_prospects" />

</LinearLayout>